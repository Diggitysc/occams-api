<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    i18n_domain="avrc.data.store">

  <five:registerPackage package="." initialize=".initialize" />

  <includeDependencies package="." />
  
  <!-- Handle when a Site adds a Data Store instance -->
  <subscriber handler=".datastore.handleDataStoreAdded" />
  <subscriber handler=".datastore.handleDataStoreModified" />
  <subscriber handler=".datastore.handleDataStoreRemoved" />
  
  <!-- Vocabularies -->
  <utility name="states" component=".vocabulary.statesVocabulary" />
  
</configure>
