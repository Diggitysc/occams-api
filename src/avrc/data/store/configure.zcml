<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    i18n_domain="avrc.data.store">

  <includeDependencies package="." />

  <!-- Handle when a Site adds an engine -->
  <subscriber handler=".datastore.handleDatastoreCreated" />
  <subscriber handler=".datastore.handleDatastoreRemoved" />

  <utility
      name="avrc.data.store.Datastore"
      component=".datastore.DatastoreFactory"
      />

  <utility name="avrc.data.store.Domain" component=".protocol.DomainFactory" />

  <!-- Vocabularies -->
  <utility
      name="avrc.data.store.SupportedTypes"
      component=".schema.SupportedTypesVocabularyFactory"
      />

  <!-- Domains -->
  <adapter factory=".schema.DatastoreSchemaManager" />

  <!-- Data -->
  <!-- Nothing written yet -->

</configure>
