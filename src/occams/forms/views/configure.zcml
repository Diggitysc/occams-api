<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="occams.forms">


  <adapter factory=".editor.VariableNameValidator" />
  <adapter factory=".editor.ConstraintValidator" />
  <adapter factory=".workflow.StateNameValidator" />

  <!--            -->
  <!-- ENTRY  -->
  <!--            -->

  <browser:defaultView
       for="occams.forms.interfaces.IDataBaseEntryContext"
       name="edit"
       />
  <browser:defaultView
       for="occams.forms.interfaces.IDataBaseAddContext"
       name="add"
       />

  <browser:page
      for="occams.forms.interfaces.IDataBaseEntryContext"
      name="edit"
      class=".entry.DataEntryFormView"
      permission="occams.forms.ModifyEntry"
      />

  <browser:page
      for="occams.forms.interfaces.IDataBaseAddContext"
      name="add"
      class=".entry.DataAddFormView"
      permission="occams.forms.CreateEntry"
      />


  <!--            -->
  <!-- REPOSITORY -->
  <!--            -->

  <browser:page
      for="occams.forms.interfaces.IRepository"
      name="view"
      class=".listing.Listing"
      permission="occams.forms.ViewRepository"
      />

  <browser:page
      for="occams.forms.interfaces.IRepository"
      name="workflow"
      class=".workflow.WorkflowStateListing"
      permission="occams.forms.ViewWorkflowState"
      />

  <!--          -->
  <!-- SCHEMATA -->
  <!--          -->
  <browser:defaultView
     for="occams.forms.interfaces.ISchemaContext"
     name="view"
     />

  <browser:page
      for="occams.forms.interfaces.ISchemaContext"
      name="view"
      class=".preview.FormPreviewForm"
      permission="occams.forms.ViewForm"
      />

  <browser:page
      for="occams.forms.interfaces.ISchemaContext"
      name="edit"
      class=".editor.FormEditFormView"
      permission="occams.forms.ModifyForm"
      />

  <!-- Need to register an add view for every possibly type -->

  <browser:page
      for="occams.forms.interfaces.ISchemaContext"
      name="add-boolean"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.ISchemaContext"
      name="add-date"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.ISchemaContext"
      name="add-datetime"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.ISchemaContext"
      name="add-decimal"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.ISchemaContext"
      name="add-integer"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.ISchemaContext"
      name="add-string"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

   <browser:page
      for="occams.forms.interfaces.ISchemaContext"
      name="add-text"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

   <browser:page
      for="occams.forms.interfaces.ISchemaContext"
      name="add-blob"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />


  <browser:page
      for="occams.forms.interfaces.ISchemaContext"
      name="add-object"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

  <!--            -->
  <!-- ATTRIBUTES -->
  <!--            -->

  <browser:defaultView
     for="occams.forms.interfaces.IAttributeContext"
     name="edit"
     />

  <browser:page
      for="occams.forms.interfaces.IAttributeContext"
      name="add-boolean"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.IAttributeContext"
      name="add-date"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.IAttributeContext"
      name="add-datetime"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.IAttributeContext"
      name="add-decimal"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.IAttributeContext"
      name="add-integer"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.IAttributeContext"
      name="add-string"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

   <browser:page
      for="occams.forms.interfaces.IAttributeContext"
      name="add-text"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

   <browser:page
      for="occams.forms.interfaces.IAttributeContext"
      name="add-blob"
      class=".editor.FieldAddForm"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.IAttributeContext"
      name="edit"
      class=".editor.FieldEditForm"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.IAttributeContext"
      name="order"
      class=".editor.FieldOrderForm"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.IAttributeContext"
      name="delete"
      class=".editor.FieldDeleteFormView"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.IAttributeContext"
      name="view"
      class=".editor.FieldPreview"
      permission="occams.forms.ModifyForm"
      />

  <browser:page
      for="occams.forms.interfaces.IAttributeContext"
      name="json"
      class=".editor.FieldJsonView"
      permission="occams.forms.ModifyForm"
      />

</configure>
