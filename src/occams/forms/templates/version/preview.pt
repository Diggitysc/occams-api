<html metal:use-macro="load: ../master.pt">
  <metal:content-slot fill-slot="content-slot">

    <header class="page-header hidden-print">
      <div metal:use-macro="load: header-toolbar.pt" />
      <h1>${context.title}</h1>
      <ul metal:use-macro="load: header-details.pt" />
      <nav metal:use-macro="load: header-nav.pt" />
    </header>

    <div class="alert alert-info hidden-print">
      <span class="glyphicon glyphicon-info-sign"></span>
      <strong i18n:translate="">Debug Mode</strong>
      <span i18n:translate="">
        You are currently previewing a form, you are free to enter data
        without side effects to the database.
      </span>
    </div>

    <form role="form" class="of-form">

      <metal:ds tal:define="schema context; ds load: ../datastore.pt" use-macro="ds.main" />

      <div class="of-controls hidden-print">
        <button type="button" class="btn btn-link" i18n:translate="">Clear</button>
        <button type="submit" class="btn btn-primary" i18n:translate="">Submit</button>
      </div>

    </form>

  </metal:content-slot>
</html>

