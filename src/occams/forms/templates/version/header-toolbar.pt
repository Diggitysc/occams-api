<div id="form-list-toolbar">
  <div class="btn-toolbar pull-right" role="toolbar" >
    <div class="btn-group">
      <a href="${request.current_route_path(_route_name='version', _query={'download': 'json'})}"
          class="btn btn-default">
        <span class="fa fa-download"></span>
        <span i18n:translate="">Download</span>
      </a>
    </div>
    <div class="btn-group">
      <button
          class="btn btn-default"
          tal:condition="context.publish_date"
          data-bind="click: startDraftView">
        <span class="fa fa-copy"></span>
        <span i18n:translate="">Draft New</span>
      </button>
      <!-- ko if: publish_date -->
        <!-- ko ifnot: retract_date -->
          <button class="btn btn-default">
            <span class="fa fa-times-circle"></span>
            <span i18n:translate="">Retract</span>
          </button>
        <!-- /ko -->
      <!-- /ko -->
      <!-- ko ifnot: publish_date -->
          <button class="btn btn-default">
            <span class="fa fa-check-circle"></span>
            <span i18n:translate="">Publish</span>
          </button>
      <!-- /ko -->
      <a href="${request.current_route_path(_route_name='version_editor')}"
          class="btn btn-default">
        <span class="fa fa-edit"></span>
        <span i18n:translate="">Edit</span>
      </a>
      <button
          class="btn btn-default"
          data-bind="click: startDeleteView">
        <span class="fa fa-trash-o"></span>
        <span i18n:translate="">Delete</span>
      </button>
    </div>
  </div> <!-- /.btn-toolbar -->
</div>

<div id="draft-modal" class="modal fade" data-keyboard="false" data-bind="showModal: showDraftView">
  <div class="modal-dialog">
    <div class="modal-content">
      <form data-bind="submit: doDraftForm">
        <div class="modal-header">
          <button type="button" class="close" aria-hidden="true" data-bind="click: clearSelected">&times;</button>
          <h4 class="modal-title" i18n:translate="">Draft new version.</h4>
        </div>
        <div class="modal-body">
          <p i18n:translate="">
            Are you sure you want to draft a new version based on <code>${context.name}</code> at version <code>${context.publish_date}</code>
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-link" data-bind="click: clearSelected" i18n:translate="">Cancel</button>
          <button type="submit" class="btn btn-primary" data-bind="disable: isDrafting">
            <span i18n:translate="">OK</span>
            <span class="fa fa-refresh fa-spin" style="display: none" data-bind="visible:isDrafting"></span>
          </button>
        </div>
      </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div id="delete-modal" class="modal fade" data-keyboard="false" data-bind="showModal: showDeleteView">
  <div class="modal-dialog">
    <div class="modal-content">
      <form data-bind="submit: doDeleteForm">
        <div class="modal-header">
          <button type="button" class="close" aria-hidden="true" data-bind="click: clearSelected">&times;</button>
          <h4 class="modal-title" i18n:translate="">Delete this version</h4>
        </div>
        <div class="modal-body">
          <p i18n:translate="" tal:condition="not:context.publish_date">
            You are about to delete this draft of the form.
            This is an irreverable action. Are you sure you want to continue?
          </p>
          <p i18n:translate="" tal:condition="context.publish_date">
            You are about to delete version <code>${context.publish_date}</code> of the
            <code>${context.name}</code> form.
            Any data entered for this version will also be deleted.
            This is an irreverable action. Are you sure you want to continue?
          </p>
          <div class="form-group has-error" tal:condition="context.publish_date">
            <p class="help-block">
              Please ensure that you want to delete this form by entering its name.
            </p>
            <input type="text" class="form-control" pattern="${context.name}" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-link" data-bind="click: clearSelected" i18n:translate="">Cancel</button>
          <button type="submit" class="btn btn-danger" data-bind="disable: isDeleting">
            <span i18n:translate="">Delete</span>
            <span class="fa fa-refresh fa-spin" style="display: none" data-bind="visible:isDeleting"></span>
          </button>
        </div>
      </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
