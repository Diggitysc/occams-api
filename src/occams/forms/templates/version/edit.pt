<!DOCTYPE html>
<html metal:use-macro="load: ../master.pt">
  <metal:content-slot fill-slot="content-slot">

    <header class="page-header">
      <h1>${schema.title}</h1>
      <ul metal:use-macro="load: ./panels/details.pt" />
    </header>

    <p class="lead" tal:condition="schema.description">${schema.description}</p>

    <!-- ko ifnot:isReady() -->
      <p class="text-center" i18n:translate="">
        <span class="glyphicon glyphicon-refresh fa-spin"></span>
        <span i18n:translate="">Loading</span>
      </p>
    <!-- /ko -->

    <div id="of-editor"
        style="display: none;"
        data-bind="visible: isReady">

      <div class="row">
        <div id="of-content" class="col-md-9">

          <!-- ko ifnot: hasFields -->
            <div id="of-empty"
                class="text-muted"
                data-bind="fadeVisible: { if: !isDragging(), duration: 'fast' }">
              <h4 i18n:translate="">This form does not have any fields addded yet.</h4>
              <p i18n:translate="">To add new fields, drag an item from the types menu.</p>
            </div>
          <!-- /ko -->

          <div id="of-form-root" data-bind="template: {name: 'field-template', data: $data}"></div>

        </div>

        <!-- Field types -->
        <div id="of-sidebar" class="col-md-3">
          <div id="of-types" class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title" i18n:translate="">Add new field...</h3>
            </div>
            <!-- ko foreach: types() -->
              <div class="list-group"
                  data-bind="
                    draggable: {
                      data: $data,
                      isEnabled: $root.isMovingEnabled,
                      options: {
                        cursor: 'move',
                        helper: newTypeHelper,
                        revert: 'invalid',
                        start: newTypeDragStart,
                        stop: newTypeDragStop
                      }
                    }">
                <a class="list-group-item list-group-item-info of-type"
                  data-bind="
                    attr: {'data-type': name},
                    text: title
                  "></a>
              </div>
            <!-- /ko -->
          </div> <!-- /.panel -->
        </div> <!-- /.col-md-3 -->
      </div> <!-- /.row -->

      <hr width="100%" />

      <div class="pull-right">
        <button class="btn btn-lg btn-primary" i18n:translate="">Done</button>
      </div>

    </div> <!-- /#of-editor" -->


    <script id="field-template" type="text/html">
      <div class="of-fields"
          data-bind="
            sortable: {
              data: fields,
              dragged: $root.showAddForm,
              isEnabled: $root.isMovingEnabled,
              options: {
                axis: 'y',
                cursor: 'move',
                forcePlaceholderSize: true,
                placeholder: 'of-placeholder',
                revert: true,
              }
            }
          ">
        <div class="of-field">
          <div data-bind="
            template: {
              if: !$root.isSelectedField($data),
              data: $data,
              name: 'field-view-template'
            }"></div>
          <div data-bind="
            template: {
              if: $root.isSelectedEditField($data),
              data: $data,
              name: 'field-edit-template'
            }"></div>
          <div data-bind="
            template: {
              if: $root.isSelectedDeleteField($data),
              data: $data,
              name: 'field-delete-template'
            }"></div>
        </div>
      </div>
    </script>

    <script id="field-view-template" type="text/html">
      <div class="row of-view" data-bind="css: {'of-editable': !$root.isEditing()}">

        <div class="col-md-10">
          <div class="form-group">
            <!-- ko ifnot: isSection -->
              <p>
                <code data-bind="text: type"></code> &bull;
                <code data-bind="text: name"></code>
              </p>
              <label data-bind="css: {'required': is_required}, text: title"></label>
            <!-- /ko -->
            <!-- ko if: isSection -->
              <h3 class="page-header" data-bind="text: title"></h3>
            <!-- /ko -->
            <!-- ko if: description -->
              <p class="help-block" data-bind="text: description"></p>
            <!-- /ko -->
            <!-- ko ifnot: isSection -->
              <div data-bind="template: {name: template, data: $data}"></div>
            <!-- /ko -->
          </div>
        </div> <!-- /.col-md-10 -->

        <div class="col-md-2 text-right">
          <div class="of-controls btn-group">
            <button type="button" class="btn btn-default" data-bind="click: $root.selectedEditField">
              <span class="glyphicon glyphicon-pencil"></span>
            </button>
            <button type="button" class="btn btn-default" data-bind="click: $root.selectedDeleteField">
              <span class="glyphicon glyphicon-trash"></span>
            </button>
          </div>
        </div> <!-- /.col-md-3 -->

      </div> <!-- /.row -->

      <!-- ko if: isSection -->
        <div data-bind="template: {name: 'field-template', data: $data}"></div>
      <!-- /ko -->
    </script>

    <script id="field-edit-template" type="text/html">
      <div class="of-edit">
        <form>

          <div class="text-right">
            <button type="button" class="btn btn-link" data-bind="click: $root.clearSelected">Cancel</button>
            <button type="button" class="btn btn-primary" data-bind="click: $root.saveField">Save</button>
          </div>
        </form>
      </div>
    </script>

    <script id="field-delete-template" type="text/html">
      <div class="of-delete">
        <div class="form-group">
          <label>Are you sure you want to delete <code data-bind="text: name"></code> from this version of the form?</label>
          <p class="help-block">
            <span data-bind="visible: !isSection() && $root.publish_date()">All  data entered for this field will be removed deleted.</span>
            <span data-bind="visible: isSection">Removing this section will also remove all sub-fields.</span>
            <span>This action cannot be reversed.</span>
          </p>
        </div>
        <div class="text-right">
          <button type="button" class="btn btn-link" data-bind="click: $root.clearSelected">Cancel</button>
          <button type="button" class="btn btn-danger" data-bind="click: $root.deleteField">Yes, I'm sure</button>
        </div>
      </div>
    </script>


    <script id="choice-widget-template" type="text/html">
      <!-- ko foreach: choices -->
        <div data-bind="css: $parent.choiceInputType">
          <label>
            <input disabled data-bind="
                attr: {
                  name: $parent.name,
                  type: $parent.choiceInputType,
                  value: name
                }" />
            <span data-bind="text: title"></span>
          </label>
        </div>
      <!-- /ko -->
    </script>

    <script id="date-widget-template" type="text/html">
      <input type="date" class="form-control" disabled data-bind="attr: {name: name}" />
    </script>

    <script id="datetime-widget-template" type="text/html">
      <input type="datetime" class="form-control" disabled data-bind="attr: {name: name}" />
    </script>

    <script id="blob-widget-template" type="text/html">
      <input type="file" class="form-control" disabled data-bind="attr: {name: name}" />
    </script>

    <script id="integer-widget-template" type="text/html">
      <input type="decimal" class="form-control" disabled data-bind="attr: {name: name}" />
    </script>

    <script id="decimal-widget-template" type="text/html">
      <input type="decimal" class="form-control" disabled data-bind="attr: {name: name}" />
    </script>

    <script id="string-widget-template" type="text/html">
      <input type="text" class="form-control" disabled data-bind="attr: {name: name}" />
    </script>

    <script id="text-widget-template" type="text/html">
      <textarea class="form-control" disabled data-bind="attr: {name: name}"></textarea>
    </script>

  </metal:content-slot>
</html>

