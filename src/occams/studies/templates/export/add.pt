<html i18n:domain="occams.studies" metal:use-macro="load: ../master.pt">
  <metal:content-slot fill-slot="content-slot">

    <header class="page-header">
      <h1 i18n:translate="">Exports</h1>
      <nav metal:use-macro="load: ./panels/nav.pt" />
    </header>

    <div class="alert alert-warning" tal:condition="exceeded|nothing">
      <strong>You have exceed your export limit of ${limit}</strong>
    </div>

    <div class="alert alert-danger" tal:condition="form.errors">
      <strong>Error!</strong> There were issues with your request, see below.
    </div>

    <form
        role="form"
        name="export"
        method="POST"
        action="${request.current_route_path()}">

      <p class="text-danger" tal:repeat="error form.csrf_token.errors">${error}</p>
      <input tal:replace="structure: form.csrf_token()" />

      <h3>Step 1</h3>

      <p class="lead" i18n:translate="">
        Select the de-identified data you would like to download.
        All exports include a code book.
      </p>

      <p class="text-danger" tal:repeat="error form.contents.errors">${error}</p>

      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th class="select">
                <input type="checkbox" data-toggle="selectall" />
              </th>
              <th class="is_system">
                <span class="glyphicon glyphicon-wrench"></span>
              </th>
              <th class="has_private">
                <span class="glyphicon glyphicon-user"></span>
              </th>
              <th class="title" i18n:translate="">Title</th>
              <th class="name" i18n:translate="">Name</th>
              <th class="version" i18n:translate="">Version</th>
            </tr>
          </thead>
          <tbody>
            <tr tal:repeat="choice form.contents">
              <tal:item define="item exportables[choice.data]">
                <td class="select">
                  <input tal:replace="choice(**{'data-toggle': 'select',
                                                'data-class': 'warning'})" />
                </td>
                <td>
                  <span
                      class="glyphicon glyphicon-wrench"
                      title="System table"
                      tal:condition="item.is_system"></span>
                </td>
                <td>
                  <span
                      class="glyphicon glyphicon-user"
                      title="Has private information"
                      tal:condition="item.has_private"></span>
                </td>
                <td class="title">${item.title}</td>
                <td class="name"><code>${item.name}</code></td>
                <td class="version">
                  <p tal:repeat="version item.versions">${version.isoformat()}</p>
                </td>
              </tal:item>
            </tr>
          </tbody>
        </table>
      </div>

      <hr />

      <h3>Step 2</h3>
      <p class="lead">${form.expand_collections.label.text}</p>
      <div class="form-group">
        <p class="text-danger" tal:repeat="error form.expand_collections.errors">${error}</p>
        <div class="radio" tal:repeat="choice form.expand_collections">
          <label>
            ${structure:choice()}
            ${choice.label.text}
          </label>
        </div>
      </div>

      <hr/>

      <h3>Step 3</h3>
      <p class="lead">${form.use_choice_labels.label.text}</p>
      <div class="form-group">
        <p class="text-danger" tal:repeat="error form.use_choice_labels.errors">${error}</p>
        <div class="radio" tal:repeat="choice form.use_choice_labels">
          <label>
            ${structure:choice()}
            ${choice.label.text}
          </label>
        </div>
      </div>


      <hr />

      <p>
        <button
            type="submit"
            name="submit"
            class="pull-right btn btn-lg btn-primary"
            tal:attributes="disabled exceeded"
            i18n:translate="">Export</button>
      </p>

    </form>

  </metal:content-slot>
</html>
