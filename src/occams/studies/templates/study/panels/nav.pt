<nav tal:define="section section|request.current_route_path()">
  <ul class="nav nav-header">
    <li tal:define="url request.current_route_path(_route_name='studies')">
      <a href="${url}"><span class="fa fa-chevron-left"></span></a>
    </li>

    <li tal:define="url request.current_route_path(_route_name='study')"
        tal:attributes="class python:'active' if section == url else ''">
      <a href="${url}">Overview</a>
    </li>
    <li tal:define="url request.current_route_path(_route_name='study_progress')"
        tal:attributes="class python:'active' if section == url else ''">
      <a href="${url}">Progress</a>
    </li>
  </ul>
</nav>

