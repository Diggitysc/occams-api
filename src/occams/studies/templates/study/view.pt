<html i18n:domain="occams.studies" metal:use-macro="load: ../master.pt">
  <metal:content-slot fill-slot="content-slot">

    <header class="page-header">
      <div metal:use-macro="load: ./panels/view-toolbar.pt" />
      <h1 i18n:translate="">${context.title}</h1>
      <ul metal:use-macro="load: ./panels/details.pt" />
      <nav metal:use-macro="load: ./panels/nav.pt" />
    </header>

    <table class="table table-bordered">
      <tbody>
        <tr>
          <td><strong>Randomization eCRFS<strong></td>
          <td></td>
        </tr>
        <tr>
          <td><strong>Termination eCRFS<strong></td>
          <td></td>
        </tr>
      </tbody>
    </table>

    <div class="table-responsive table-scrollable">
      <table class="table table-bordered table-striped table-dimensional">
        <thead>
          <tr>
            <th></th>
            <!-- ko foreach: study.cycles -->
              <th>
                <span class="rotated-text">
                  <span class="rotated-text__inner" data-bind="text: title"></span>
                </span>
              </th>
            <!-- /ko -->
          </tr>
        </thead>
      </table>
    </div>

    <tal:json define="json import:json">
      <script id="study-data" type="application/json">${json.dumps(study)}</script>
    </tal:json>

  </metal:content-slot>
</html>
