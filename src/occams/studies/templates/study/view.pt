<html i18n:domain="occams.studies" metal:use-macro="load: ../master.pt">
  <metal:content-slot fill-slot="content-slot">
    <header class="page-header">
      <div metal:use-macro="load: ./panels/view-toolbar.pt" />
      <h1 i18n:translate="">${study.title}</h1>
      <ul metal:use-macro="load: ./panels/details.pt" />
      <nav metal:use-macro="load: ./panels/nav.pt" />
    </header>

    <tal:description switch="bool(study.description)">
      <p tal:case="True">${structure:study.description}</p>
      <div tal:case="False" class="alert alert-info" i18n:translate="">
        <strong>What to say?</strong> This study has no description.
      </div>
    </tal:description>
  </metal:content-slot>
</html>
