<html metal:use-macro="main_template">
  <metal:content-slot fill-slot="content-slot">
    <div class="page-header">
      <h1>Sites</h1>
    </div>

    <tal:sites repeat="site sites">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">${site.title}</h3>
        </div>
        <div class="panel-body">
          <p tal:condition="not:site.description" i18n:translate=""><em>No description available</em></p>
          <p tal:condition="site.description">${site.description}</p>
        </div>
      </div>
    </tal:sites>

  </metal:content-slot>
</html>
