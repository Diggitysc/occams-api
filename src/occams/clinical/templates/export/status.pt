<html i18n:domain="occams.clinical" metal:use-macro="main_template">
  <metal:content-slot fill-slot="content-slot">

    <div style="display: none;" data-bind="visible:ready()">
      <script type="text/html" id="pager-template">
        <ul class="pager">
          <li data-bind="attr: {'class': has_previous() ? 'previous' : 'previous disabled'}">
            <a data-bind="attr: {'href': '#/' + previous()}">
              &larr; Newer
            </a>
          </li>
          <li data-bind="attr: {'class': has_next() ? 'next' : 'next disabled'}">
            <a data-bind="attr: {'href': '#/' + next()}">
              Older &rarr;
            </a>
          </li>
        </ul>
      </script>

      <div data-bind="template: { name: 'pager-template', data: pager(), if: pager() }"></div>

      <div data-bind="ifnot:exports().length > 0">
        <div
            class="alert alert-info"
            i18n:translate="">
          You have no exports pending.
        </div>
      </div>

      <!-- ko foreach: exports() -->
        <div data-bind="
            attr: {
              id:       'export-' + id,
              'class':  'export panel panel-' + status()}">

          <div class="panel-heading clearfix">
            <div class="pull-right export-status">
              <span class="label label-warning" data-bind="if:status() == 'pending'" i18n:translate="">In Progess</span>
              <span class="label label-danger" data-bind="if:status() == 'failed'" i18n:translate="">Failed</span>
              <div data-bind="if:status() == 'complete'" class="text-muted">
                <small>
                  <span>Created on <span data-bind="text:create_date"></span></span><br/>
                  <span data-bind="if:expire_date">
                    Available until <span data-bind="text:expire_date"></span>
                  </span>
                </small>
              </div>
            </div>

            <h3 class="panel-title export-title" data-bind="text:title"></h3>
          </div> <!-- panel-heading -->

          <div class="panel-body">
            <!-- ko if: status() == 'pending' -->
              <div class="progress">
                <div
                    class="progress-bar"
                    role="progressbar"
                    aria-valuenow="0"
                    aria-valuemin="0"
                    aria-valuemax="100"
                    data-bind="
                      attr: {'aria-valuenow': progress()},
                      style: {'width': progress() + '%'}">
                  <span class="sr-only" data-bind="text: progress()"></span>
                </div>
              </div>
              <hr />
            <!-- /ko -->
            <!-- ko if: status() == 'complete' -->
              <a  target="_blank"
                  i18n:translate=""
                  class="btn btn-primary"
                  data-bind="attr: {href: download_url}"
                  ><span class="glyphicon glyphicon-download-alt"></span> Download</a>
              <span class="export-file">export.zip &bull; <span data-bind="text:file_size"></span></span>
              <hr />
            <!-- /ko -->
            <div class="export-controls">
              <button
                  class="btn btn-link export-details-toggle collapsed"
                  data-toggle="collapse"
                  data-bind="
                    attr: {
                      'data-target': '#export-collapse-' + id
                    }"
                  i18n:translate=""
                >Details</button>
              <button
                  class="btn btn-link pull-right"
                  data-toggle="modal"
                  data-target="#modal"
                  data-bind="attr: {'data-remote': delete_url }"
                  i18n:translate=""
                  >Delete export</button>
            </div>
          </div> <!-- /panel-body -->

          <div
              class="collapse table-responsive export-details"
              data-bind="attr: {id: 'export-collapse-' + id}">
            <table class="table table-condensed">
              <thead>
                <tr>
                  <th class="has_private">
                    <span class="glyphicon glyphicon-user"></span>
                  </th>
                  <th class="title" i18n:translate="">Title</th>
                  <th class="name" i18n:translate="">Name</th>
                  <th class="version" i18n:translate="">Version</th>
                </tr>
              </thead>
              <tbody>
                <!-- ko foreach: items -->
                <tr>
                  <td>
                    <!-- ko if: has_private -->
                    <span
                        class="glyphicon glyphicon-user"
                        title="Has private information"></span>
                    <!-- /ko -->
                  </td>
                  <td class="title" data-bind="text:title"></td>
                  <td class="name"><code data-bind="text:name"></code></td>
                  <td class="version">
                    <!-- ko foreach: versions -->
                    <p data-bind="text: $data"></p>
                    <!-- /ko -->
                  </td>
                </tr>
                <!-- /ko -->
              </tbody>
            </table>
          </div> <!-- /#export-collapse -->

        </div> <!-- /.panel -->
      <!-- /ko -->

      <div data-bind="template: { name: 'pager-template', data: pager(), if: pager() }"></div>

    </div>

 </metal:content-slot>
</html>
