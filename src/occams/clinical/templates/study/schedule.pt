<html i18n:domain="occams.clinical" metal:use-macro="main_template">
  <metal:content-slot fill-slot="content-slot">

    <div class="table-responsive">
      <table
          id="schedule"
          class="table table-bordered table-striped">
        <thead>
          <tr>
            <th class="ecrf"></th>
            <tal:cycles repeat="cycle cycles">
              <th class="cycle">
                <span>${cycle.title}</span>
              </th>
            </tal:cycles>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="ecrf ecrfs">
            <td class="ecrf"><span>${ecrf.title}</span></td>
            <!--! The rest of the columns are the cycles,
                  just loop through them (skip the first since
                  it's the ecrf) -->
            <tal:cycles repeat="enabled ecrf">
              <td tal:condition="not:repeat['enabled'].start">
                <span tal:condition="enabled" class="glyphicon glyphicon-ok"></span>
              </td>
            </tal:cycles>
          </tr>
        </tbody>
      </table>
    </div>

  </metal:content-slot>
</html>
