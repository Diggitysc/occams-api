<?xml version="1.0"?>
<object 
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    meta_type="Dexterity FTI"
    i18n:domain="occams.form.repository"
    name="occams.form.repository">

  <!-- Human-readable metadata -->
  <property name="title" i18n:translate="title">Form Repository</property>
  <property name="description" i18n:translate="description">
    Provides an entry point for accessing form schemata.
  </property>

  <!-- Content settings -->
  <property name="content_icon">++resource++occams.form/images/database.png</property>
  <!-- Applications must specificy this as an addable type -->
  <property name="global_allow">True</property>
  <property name="filter_content_types">True</property>  
  <property name="allowed_content_types">
    <!-- 
        No sub-content allowed since we're only using this as a stub for
        accessing DataStore schemata.
    -->
  </property>
  <property name="allow_discussion">False</property>

  <!-- Content type specification -->
  <property name="schema">occams.form.interfaces.IRepository</property> 

  <!-- Content type implementation (use generic Plone type) -->
  <property name="klass">plone.dexterity.content.Item</property>

  <property name="add_permission">cmf.AddPortalContent</property>
 
  <property name="behaviors">
    <element value="plone.app.content.interfaces.INameFromTitle" />
    <element value="plone.app.dexterity.behaviors.metadata.IDublinCore"/>
  </property>

  <!-- View information -->
  <property name="default_view">view</property>
  <property name="default_view_fallback">False</property>
  <property name="view_methods">
    <element value="view" />
  </property>

  <!-- Method aliases -->
  <alias from="(Default)" to="(selected layout)" />
  <alias from="edit" to="@@edit" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="@@view" />

  <!-- Actions -->
  <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/" visible="True">
    <permission value="avrc: View an Institute" />
  </action>
  <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
    <permission value="avrc: Modify an Institute" />
  </action>
</object>
