<nav tal:define="section section|request.current_route_path()">
  <ul class="nav nav-header">
    <li tal:define="url request.current_route_path(_route_name='version_view')"
        tal:attributes="class python:'active' if section == url else ''">
      <a href="${url}" i18n:translate="">Overview</a>
    </li>
    <li tal:define="url request.current_route_path(_route_name='version_preview')"
        tal:attributes="class python:'active' if section == url else ''">
      <a href="${url}" i18n:translate="">Preview</a>
    </li>
    <li tal:define="url request.current_route_path(_route_name='version_codebook')"
        tal:attributes="class python:'active' if section == url else ''">
      <a href="${url}" i18n:translate="">Codebook</a>
    </li>
  </ul>
</nav>
